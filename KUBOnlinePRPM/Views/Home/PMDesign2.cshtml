                }
                ]
            });
            TotalRevenue.render();

            var TotalCost = new CanvasJS.Chart("TotalCost", {
                theme: "light2",
                animationEnabled: true,
                data: [
                {
                    type: "column",
                    dataPoints: [
                        { y: 2, label: "Agro" },
                        { y: 3, label: "KUBtel" },
                        { y: 1, label: "Power" },
                        { y: 2, label: "A&W" },
                        { y: 2, label: "Gaz" }
                    ],

                    //You can add dynamic data from the controller as shown below. Check the controller and uncomment the line which generates dataPoints.
                    //dataPoints: @Html.Raw(ViewBag.DataPoints),
                }
                ]
            });
            TotalCost.render();

            var TotalGP = new CanvasJS.Chart("TotalGP", {
                theme: "light2",
                animationEnabled: true,
                data: [
                {
                    type: "column",
                    dataPoints: [
                        { y: 9, label: "Agro" },
                        { y: 10, label: "KUBtel" },
                        { y: 10, label: "Power" },
                        { y: 7, label: "A&W" },
                        { y: 8, label: "Gaz" }
                    ],

                    //You can add dynamic data from the controller as shown below. Check the controller and uncomment the line which generates dataPoints.
                    //dataPoints: @Html.Raw(ViewBag.DataPoints),
                }
                ]
            });
            TotalGP.render();

            var TotalContVsClaim = new CanvasJS.Chart("TotalContVsClaim",
	{
	    //backgroundColor: "black",
	    data: [
        {
            type: "doughnut",
            toolTipContent: null,
            dataPoints: [
            { y: 136, indexLabel: "RM 40M" },
            { y: 44, indexLabel: "From RM 53M" }
            ]
        }
	    ]
	});
            convertToHalfDoughnut(TotalContVsClaim);
            TotalContVsClaim.render();

            var PlanVsActual = new CanvasJS.Chart("PlanVsActual",
	{
	    //backgroundColor: "black",
	    data: [
        {
            type: "doughnut",
            toolTipContent: null,
            dataPoints: [
            { y: 54.5, indexLabel: "RM 10M" },
            { y: 125.5, indexLabel: "From RM 33M" }
            ]
        }
	    ]
	});
            convertToHalfDoughnut(PlanVsActual);
            PlanVsActual.render();

            function convertToHalfDoughnut(chart) {
                var sum = 0;
                var dataPoints = chart.options.data[0].dataPoints;

                for (var i = 0; i < dataPoints.length; i++) {
                    sum += dataPoints[i].y;
                }

                dataPoints.splice(0, 0, { y: sum, color: "transparent", toolTipContent: null, highlightEnabled: false });
            }

            $(".canvasjs-chart-credit").addClass("hide");
        });
    </script>
}