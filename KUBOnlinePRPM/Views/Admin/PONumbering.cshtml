@model KUBOnlinePRPM.Models.POModel

@using (Html.BeginForm("PONumbering", "Admin", FormMethod.Post, new { @id = "PONumbering", @class = "container-fluid g-mb-40" }))
{
    @Html.TextBoxFor(m => m.ChildCustId, new { @id = "ChildCustId", @class = "d-none", @type = "text" })
    <div class="row g-bg-white g-pa-20">
        <div class="col-md-12">
            <div class="media-body align-self-center text-left g-mb-30">
                <h3 class="g-font-weight-400 g-font-size-20 g-color-black">Edit PO Numbering</h3>
            </div>
        </div>
        <div class="container-fluid-v3 col-xs-12 g-mb-30 g-mt-10">
            <div class="row g-mb-20">
                <div class="col-md-2 col-sm-2 formfield">
                    <span>Insert the new PO No here</span>
                </div>
                <div class="d-flex col-md-4 col-sm-4">
                    @Html.TextBoxFor(m => m.NewPOForm.PONo, new { @id = "NewPONo", @class = "form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-20 g-px-14 g-py-10", @type = "text" })
                    
                </div>
                <div class="d-flex col-md-4 col-sm-4">
                    <a id="SubmitNewPONo" class="btn btn-md text-white u-btn-blue g-mr-5">SUBMIT</a>
                </div>
            </div>

            <table class="table table-striped table-bordered dt-responsive table-hover" id="PONumberListTable">
                <thead>
                    <tr>
                        <th class="d-none"></th>
                        <th>
                            Last Modified PO No.
                        </th>
                        <th>
                            Modified Date
                        </th>
                        <th>
                            Current PO No.
                        </th>
                        <th>
                            Current PO No. Date
                        </th>
                        <th>
                            Current PO Project Name
                        </th>
                        <th>
                            Current PO Vendor Name
                        </th>
                    </tr>
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <td class="d-none">
                            @Html.DisplayFor(modelItem => Model.POListTable.POId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.LastPONo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.LastPODate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.PONo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.PODate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.POListTable.VendorCompany)
                        </td>
                    </tr>
                </tbody>
            </table>            
        </div>
    </div>
}

<div class="modal">
</div>

<div id="UploadProgressModal" class="text-left g-max-width-600 g-bg-white g-overflow-y-auto g-pa-20" style="display: none;">
    <button type="button" class="close" onclick="Custombox.modal.close();">
        <i class="hs-icon hs-icon-close"></i>
    </button>
    <div class="row" id="uploadProgress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
            0% Complete
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        var PONumberListTable;
        var URLPONumbering = "@Url.Action("PONumbering", "Admin")";
    </script>
    <script src="~/Scripts/PONumbering.js"></script>
}