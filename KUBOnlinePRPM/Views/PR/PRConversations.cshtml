@model KUBOnlinePRPM.Models.NotiModel

@*<div class="row g-bg-white g-pa-20">*@
    <div class="col-md-12">
        <div class="media-body align-self-center text-left g-mb-30">
            <h3 class="g-font-weight-400 g-font-size-20 g-color-black">PR Conversations &amp; Updates</h3>
        </div>
    </div>
    <div class="container-fluid-v3 col-xs-12 g-mb-30 g-mt-10">
        <div class="col-md-12">
            <!-- Default Panel -->
            <div class="panel panel-u">
                <div class="panel-body panel-height">
                    @foreach (var MessageList in Model.MessageListModel)
                    {
                        if (@MessageList.MsgType == "Task")
                        {
                            <div class="row margin-left-10 margin-bottom-5">
                                <div class="col-md-8">
                                    @*27 Jun 2015 12:15 PM [Muzhafar send to Unknown, Saiful, Azimah]*@
                                    @*<div id="UserIds"class="hidden">@MessageList.Uid</div>*@
                                    @MessageList.MsgDate [@MessageList.FromUserName send to @MessageList.ToUserName]
                                </div>
                                <div class="col-md-8">
                                    @*<div><b>Muzhafar :</b> Hai apa khabar</div>*@
                                    <div><b>@MessageList.FromUserName</b> : @MessageList.Message</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row margin-left-10 margin-bottom-5">
                                <div class="col-md-10">
                                    @*27 Jun 2015 12:15 PM [Muzhafar send to Unknown, Saiful, Azimah]*@
                                    @*<div id="UserIds"class="hidden">@MessageList.Uid</div>*@
                                    @MessageList.MsgDate <b>[@MessageList.PRNo]</b> [<b>@MessageList.FromUserName</b> @MessageList.Message]
                                </div>
                            </div>
                        }
                        //MessageList.
                        <hr />
                    }
                </div>
            </div>
            <!-- End Default Panel -->
        </div>
        <div id="UserIds" class="hidden">@Model.UserId</div>
        <button id="triggerButton" type="button" class="hidden"></button>
        <div class="col-md-10">
            @*<form class="sky-form" action="#">*@
            <label class="label h4">Put your updates here</label>
            <label class="textarea">
                <i class="icon-append fa fa-comment"></i>
                <textarea id="MessageContent" rows="2"></textarea>
            </label>
            <div class="margin-bottom-20"><hr></div>
            <div class="row container-fluid btn-FloatRight">
                @*<button id="UploadPOFile" class="btn-u" type="button">Upload File</button>*@
                <button class="btn-u btn-success margin-bottom-25" type="button" data-toggle="modal" data-target="#POQNA_Modal">
                    <i class="fa fa-tags"></i> Submit message
                </button>
            </div>
            <div class="modal fade responsive" id="POQNA_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div id="result" class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close closeButton" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Please select the recipient:</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row container">
                                <label class="control-label">Select users: (Ctrl + left click to select multiple users)</label>
                                <label class="select select-multiple form-control-popup">
                                    @*<select multiple id="selMultiple">
                                        <option value="2">muzhafar</option>
                                        <option value="12">m.faizal</option>
                                        <option value="22">saiful</option>
                                        <option value="32">azimah</option>
                                    </select>*@
                                    @Html.ListBox("userIds", (MultiSelectList)ViewBag.NotiMemberList, new { @id = "POselMultiple" })
                                    @*@Html.ListBoxFor(m => m.UserID, Model.MessageListModel, new { size = 5 })*@
                                </label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn-u btn-success btn-FloatRight" type="button" id="POSendMessage">
                                <i class="fa fa-tags"></i> Submit message
                            </button>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                0% Complete
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@*</div*@>

